<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<link rel="stylesheet" href="../css/createEvent.css">

<section class="container">
    <%- include('../partials/eventsSideMenu') -%>

    <div class="main-content-space">
        <div class="event-create-menu">
            <form class="list-group-item" action="/create" method="post">
                <h1>Create Event</h1>
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" placeholder="Enter event title" name="title" required>
                        </br>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <textarea class="form-control" placeholder="Enter event description" name="description" required></textarea> 
                    </br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">
                        <input type="text" class="form-control"  placeholder="Enter event location" name="location" required>
                        </br>
                    </div>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" maxlength="5" pattern="[0-9]{5}"
                            placeholder="Enter event zipcode" name="zipcode" required> </br>
                    </div>
                    <div class="col-lg-4">
                        <input type="date" class="form-control" placeholder="Enter event date" name="date" required> </br>
                    </div>
                </div>

                <!-- Start and End Time -->
                <!-- <div class="row">
                    <div class="col-lg-4">
                        <input type="time" class="form-control" id="startTime" value="12:00" required>
                        <label for=startTime class="time-text">Start Time</label>
                    </div>
                    <div class="col-lg-4">
                        <input type="time" class="form-control" id="endTime" value="12:00" required>
                        <label for=endTime class="time-text">End Time</label>
                    </div>
                </div> -->
                <button id="submit-event" class="btn btn-success btn-lg download-button" type="submit">Submit</button>
            </form>
        </div>
    </div>
</section>

<%- include('../partials/footer') -%>